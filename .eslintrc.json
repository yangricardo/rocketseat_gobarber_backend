{
	"env": {
		"browser": true,
		"es2020": true
	},
	"extends": [
		"airbnb-base",
		"prettier/@typescript-eslint",
		"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"rules": {
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"ts": "never"
			}
		],
		"settings": {
			"import/resolver": {
				"typescript": {}
			}
		},
		"prettier/prettier": "error"
	}
}
